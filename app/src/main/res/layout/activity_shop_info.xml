<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shop_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context="com.aladdin.hxe.activity.ShopInfoActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="36px"
        android:background="@color/colorYellow">

        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="门店信息"
            android:textColor="@color/white"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:gravity="center_vertical"
            android:text="  基础信息"
            android:textColor="@color/colorTextGray"
            android:textSize="24px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100px"
                android:text="  头像"
                android:textColor="@color/blackmid"
                android:textSize="30px" />
            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="46px"
                android:layout_marginRight="10px">
                <ImageView
                    android:id="@+id/img_shoptitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ></ImageView>
            </android.support.v7.widget.CardView>
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="670px"
            android:layout_height="1.5px"
            android:layout_gravity="center"
            android:background="@color/colorLightGray"></View>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="  店铺名"
                android:textColor="@color/blackmid"
                android:textSize="30px" />

            <EditText
                android:id="@+id/et_shopname"
                android:layout_width="500px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="111"
                android:textColor="@color/blackmid"
                android:textSize="30px"

                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="750px"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:background="@color/colorBlack"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="10px"
            android:gravity="center_vertical"
            android:text="  店铺介绍"
            android:textColor="@color/colorTextGray"
            android:textSize="24px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="  地址 "
                android:textColor="@color/blackmid"
                android:textSize="30px" />

            <EditText
                android:id="@+id/et_shopaddress"
                android:layout_width="500px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:background="@null"
                android:ellipsize="none"
                android:gravity="center_vertical|right"
                android:maxLines="5"
                android:text="中原工学院"
                android:textColor="@color/blackmid"
                android:textSize="26px"

                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="670px"
            android:layout_height="1.5px"
            android:layout_gravity="center"
            android:background="@color/colorLightGray"></View>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="  商家电话"
                android:textColor="@color/blackmid"
                android:textSize="30px" />

            <EditText
                android:id="@+id/et_shopphone"
                android:layout_width="500px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="13783948535"
                android:textColor="@color/blackmid"
                android:textSize="26px"

                />
        </com.zhy.autolayout.AutoRelativeLayout>


        <View
            android:layout_width="670px"
            android:layout_height="1.5px"
            android:layout_gravity="center"
            android:background="@color/colorLightGray"></View>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="  公告"
                android:textColor="@color/blackmid"
                android:textSize="30px" />

            <EditText
                android:id="@+id/et_shopnotice"
                android:layout_width="500px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:background="@null"
                android:ellipsize="none"
                android:gravity="center_vertical|right"
                android:maxLines="4"
                android:text="中原工学院"
                android:textColor="@color/black"
                android:textSize="26px"></EditText>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="260px"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:background="@drawable/submit"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="32px" />

</com.zhy.autolayout.AutoLinearLayout>
