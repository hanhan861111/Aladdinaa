<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context="com.aladdin.hxe.activity.BlueActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="36px"
        android:background="@color/colorYellow">

        <ImageButton
            android:id="@+id/imb_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加蓝牙票机"
            android:textColor="@color/white"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="20px"
        android:orientation="vertical"
        android:layout_width="700px"
        android:layout_height="340px"
        android:layout_gravity="center"
        android:background="@color/white">
        <ImageView
            android:background="@mipmap/inblue"
            android:layout_marginTop="40px"
            android:layout_gravity="center"
            android:layout_width="120px"
            android:layout_height="120px" />
        <TextView
            android:id="@+id/tv_title"
            android:textSize="32px"
            android:gravity="center"
            android:text="正在搜索打印机..."
            android:textColor="@color/colorGray4"
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="60px" />
        <TextView
            android:id="@+id/tv_summary"
            android:textSize="28px"
            android:gravity="center"
            android:text="重新搜索"
            android:textColor="@color/colorGray4"
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="60px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_marginLeft="40px"
        android:textSize="28px"
        android:gravity="center_vertical"
        android:text="请选择要链接的打印机"
        android:textColor="@color/colorGray3"
        android:layout_width="match_parent"
        android:layout_height="60px" />
    <ListView
        android:id="@+id/lv_searchblt"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_width="700px"
        android:layout_height="300px"></ListView>
    <TextView
        android:id="@+id/tv_text"
        android:background="@color/colorYellow"
        android:layout_marginTop="10px"
        android:layout_gravity="center"
        android:textSize="28px"
        android:gravity="center"
        android:text="打印测试页"
        android:textColor="@color/white"
        android:layout_width="700px"
        android:layout_height="60px" />
    <TextView
        android:id="@+id/tv_break"
        android:layout_gravity="center"
        android:background="@color/colorRed"
        android:layout_marginTop="10px"
        android:textSize="28px"
        android:gravity="center"
        android:text="断开当前连接"
        android:textColor="@color/white"
        android:layout_width="700px"
        android:layout_height="60px" />

</com.zhy.autolayout.AutoLinearLayout>
