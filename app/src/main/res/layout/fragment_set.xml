<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="276px"
        android:background="@color/colorYellow">
        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_marginLeft="46px"
            android:layout_marginTop="140px">
            <ImageView
                android:id="@+id/img_mine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               ></ImageView>
        </android.support.v7.widget.CardView>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_shopname_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26px"
            android:layout_marginTop="155px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shopname_mine"
                android:layout_width="380px"
                android:layout_height="wrap_content"
                android:text="知青居"
                android:singleLine="true"
                android:textColor="@color/colorGray4"
                android:textSize="32px"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/colorGray3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="点击查看门店详情"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_shopinfo_mine"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="100px"
        android:layout_gravity="center">
        <ImageView
            android:layout_marginLeft="30px"
            android:background="@mipmap/stores"
            android:layout_gravity="center"
            android:layout_width="46px"
            android:layout_height="46px" />
        <TextView
            android:textColor="@color/colorGray4"
            android:gravity="center"
            android:layout_marginLeft="20px"
            android:textSize="30px"
            android:text="门店信息"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginLeft="400px"
            android:background="@mipmap/qr_code"
            android:layout_width="60px"
            android:layout_height="60px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_gravity="center">
        <ImageView
            android:layout_marginLeft="30px"
            android:background="@mipmap/voice"
            android:layout_gravity="center"
            android:layout_width="46px"
            android:layout_height="46px" />
        <TextView
            android:textColor="@color/colorGray4"
            android:gravity="center"
            android:layout_marginLeft="20px"
            android:textSize="30px"
            android:text="语音播报"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/white">
            <ToggleButton
                android:layout_marginLeft="380px"
                android:id="@+id/ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:button="@drawable/toggle_btn"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_gravity="center"
        android:background="@color/colorBlack"
        android:layout_width="640px"
        android:layout_height="2px"></View>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_ticketManage_mine"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_gravity="center">
        <ImageView
            android:layout_marginLeft="30px"
            android:background="@mipmap/ticket"
            android:layout_gravity="center"
            android:layout_width="46px"
            android:layout_height="46px" />

        <TextView
            android:textColor="@color/colorGray4"
            android:gravity="center"
            android:layout_marginLeft="20px"
            android:textSize="30px"
            android:text="票机管理"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView4" />

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="420px"
            android:background="@mipmap/spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_gravity="center"
        android:background="@color/colorBlack"
        android:layout_width="600px"
        android:layout_height="2px"></View>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_feedback_mine"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_gravity="center">
        <ImageView
            android:layout_marginLeft="30px"
            android:background="@mipmap/feedback"
            android:layout_gravity="center"
            android:layout_width="46px"
            android:layout_height="46px" />
        <TextView
            android:textColor="@color/colorGray4"
            android:gravity="center"
            android:layout_marginLeft="20px"
            android:textSize="30px"
            android:text="意见反馈"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="420px"
            android:background="@mipmap/spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/cancel"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#FF3030"
        android:textSize="30px"
        android:layout_width="680px"
        android:layout_height="100px" />
</com.zhy.autolayout.AutoLinearLayout>
