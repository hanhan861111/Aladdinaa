<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_width="700px"
        android:layout_height="100px">
        <TextView
            android:layout_marginLeft="40px"
            android:id="@+id/tv_orderNum"
            android:textColor="@color/colorGray4"
            android:textSize="24px"
            android:gravity="center_vertical"
            android:text="订单号201801103"
            android:layout_width="300px"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="200px"
            android:id="@+id/tv_orderPrice"
            android:textColor="@color/colorGray4"
            android:textSize="36px"
            android:gravity="center"
            android:text="+10.00"
            android:layout_width="120px"
            android:layout_height="match_parent" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_width="700px"
        android:layout_height="100px">
        <TextView
            android:layout_marginLeft="40px"
            android:id="@+id/tv_orderTime"
            android:textSize="28px"
            android:gravity="center_vertical"
            android:text="今天11:15"
            android:layout_width="300px"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_payStatus"
            android:layout_marginLeft="210px"
            android:textSize="28px"
            android:gravity="center"
            android:text="在线支付"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="10px"></View>
</com.zhy.autolayout.AutoLinearLayout>
