<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_hide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf0e6"
    android:gravity="center_horizontal"
    android:orientation="vertical"
android:visibility="gone"
   >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="680px"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28px"
                android:text="这是名字"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_call"
                android:layout_width="166px"
                android:layout_height="100px"
                android:layout_marginLeft="340px"
                android:gravity="center_vertical|right">

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:background="@drawable/dianhua" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:gravity="center"
                    android:text="联系顾客"
                    android:textColor="@color/colorGray4"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30px"
                android:text="订单"
                android:textColor="@color/colorGray5"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ListView
            android:id="@+id/lv_orderproducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"></ListView>


        <View
            android:layout_width="650px"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@color/colorTextGray"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="80px"
                android:layout_height="40px"
                android:background="#ee7942"
                android:gravity="center"
                android:text="备注:"
                android:textColor="@color/white"
                android:textSize="28px" />


            <TextView
                android:id="@+id/tv_des"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:text="不要辣椒"
                android:textColor="@color/colorGray4"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间"
                android:textColor="@color/colorGray4"
                android:textSize="24px" />


            <TextView
                android:id="@+id/tv_updatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="380px"
                android:text="2017-9-15 12:20"
                android:textColor="@color/colorGray5"
                android:textSize="20px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="650px"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@color/colorTextGray"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="140px"
                android:layout_height="50px"
                android:text="拒单原因:"
                android:textColor="@color/colorGray4"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:text="订单里的原因"
                android:textColor="@color/colorGray4"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginLeft="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:drawableRight="@mipmap/open"
                android:gravity="center"
                android:text="本单收入"
                android:textColor="@color/colorGray4"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_realfee"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_marginLeft="270px"
                android:gravity="center"
                android:text="￥22.00"
                android:textColor="@color/colorGray4" />

            <TextView
                android:layout_width="100px"
                android:layout_height="40px"
                android:layout_marginLeft="20px"
                android:background="#00ee00"
                android:gravity="center"
                android:text="已支付" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="13px"
            android:background="#faf0e6"></View>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
