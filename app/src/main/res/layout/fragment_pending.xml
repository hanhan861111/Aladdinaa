<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="36px"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/colorYellow"
        android:gravity="center"
        android:text="待处理"
        android:textColor="@color/white"
        android:textSize="32px" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_pending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:tabIndicatorHeight="3dp"
        app:tabMode="fixed"
        app:tabPaddingEnd="-1dp"
        app:tabPaddingStart="-1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:tabIndicatorColor="@color/colorTextYellow"
        app:tabSelectedTextColor="@color/colorTextYellow"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/colorGray3"></android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pending"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</com.zhy.autolayout.AutoLinearLayout>
