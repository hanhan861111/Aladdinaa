<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ticket_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    tools:context="com.aladdin.hxe.activity.TicketInfoActivity">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="36px"
        android:background="@color/colorYellow">

        <ImageButton
            android:id="@+id/imb_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="票机详情"
            android:textColor="@color/white"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="20px"
        android:layout_width="680px"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="300px">
        <TextView
            android:textColor="@color/colorGray2"
            android:textSize="30px"
            android:text="票机信息"
            android:gravity="center"
            android:layout_width="160px"
            android:layout_height="60px" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:textColor="@color/colorGray4"
                android:textSize="32px"
                android:text="类型"
                android:gravity="center"
                android:layout_width="110px"
                android:layout_height="60px" />
            <TextView
                android:id="@+id/tv_type"
                android:layout_marginLeft="340px"
                android:textColor="@color/colorGray4"
                android:textSize="32px"
                android:text="类型"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_width="200px"
                android:layout_height="60px" />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_gravity="center"
            android:background="@color/colorBlack"
            android:layout_width="650px"
            android:layout_height="2px"></View>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:textColor="@color/colorGray4"
                android:textSize="32px"
                android:text="名称"
                android:gravity="center"
                android:layout_width="110px"
                android:layout_height="60px" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="340px"
                android:textColor="@color/colorGray4"
                android:textSize="32px"
                android:text="类型"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_width="200px"
                android:layout_height="60px" />

        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_gravity="center"
            android:background="@color/colorBlack"
            android:layout_width="650px"
            android:layout_height="2px"></View>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:textColor="@color/colorGray4"
                android:textSize="32px"
                android:text="编号"
                android:gravity="center"
                android:layout_width="110px"
                android:layout_height="60px" />
            <TextView
                android:id="@+id/tv_num"
                android:layout_marginLeft="340px"
                android:textColor="@color/colorGray4"
                android:textSize="32px"
                android:text="编号"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_width="200px"
                android:layout_height="60px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/tv_unbindTicket"
        android:background="@color/colorYellow"
        android:text="解绑票机"
        android:textColor="@color/colorRed"
        android:textSize="32px"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:layout_width="680px"
        android:layout_height="80px" />
</com.zhy.autolayout.AutoLinearLayout>
