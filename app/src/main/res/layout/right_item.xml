<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px">

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>

        </android.support.v7.widget.CardView>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_right_name"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginLeft="10px"
                android:layout_marginTop="10px"
                android:gravity="center_vertical"
                android:text="名字"
                android:textColor="@color/colorGray4"
                android:textSize="30px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px">
                <TextView
                    android:id="@+id/tv_right_youhuiPrice"
                    android:layout_width="100px"
                    android:layout_height="50px"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:gravity="center_vertical"
                    android:text="价格"
                    android:textColor="@color/colorRed"
                    android:textSize="30px" />
                <TextView
                    android:id="@+id/tv_right_yuanPrice"
                    android:layout_width="100px"
                    android:layout_height="50px"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:gravity="center_vertical"
                    android:text="价格"
                    android:textColor="@color/colorGray5"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/tv_right_edit"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@mipmap/text1"
            android:gravity="center"
            android:text="编辑"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_right_down"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/text1"
            android:gravity="center"
            android:text="下架"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/cardview"

        android:background="@color/colorLightGray"></View>
</com.zhy.autolayout.AutoLinearLayout>