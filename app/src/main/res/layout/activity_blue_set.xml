<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_blue_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context="com.aladdin.hxe.activity.BlueSetActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="36px"
        android:background="@color/colorYellow">

        <ImageButton
            android:id="@+id/imb_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="打印机设置"
            android:textColor="@color/white"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="700px"
        android:layout_height="340px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:background="@mipmap/ticket_wifi" />

        <TextView
            android:id="@+id/tv_blueName"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:gravity="center"
            android:text="正在搜索打印机..."
            android:textColor="@color/colorGray4"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_statuse"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="10px"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/colorGreen"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoLinearLayout>
    <Button
        android:layout_gravity="center"
        android:id="@+id/tv_textPrint"
        android:background="@color/colorYellow"
        android:layout_width="200px"
        android:layout_height="80px"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:text="打印"
        android:textColor="@color/colorGreen"
        android:textSize="28px" />
</com.zhy.autolayout.AutoLinearLayout>
