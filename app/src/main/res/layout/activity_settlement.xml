<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_activeset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="36px"
        android:background="@color/colorYellow">

        <ImageButton
            android:id="@+id/imb_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="结算管理"
            android:textColor="@color/white"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="680px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="180px"
            android:layout_height="60px"
            android:gravity="center"
            android:text="银行卡信息"
            android:textColor="@color/colorGray2"
            android:textSize="30px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="账户类型"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_bankType"
                android:layout_marginLeft="10px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="所属银行"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="650px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="@color/colorBlack"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="所属银行"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />
            <TextView
                android:id="@+id/tv_bankName"
                android:layout_marginLeft="10px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="所属银行"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="650px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="@color/colorBlack"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="所属支行"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />
            <TextView
                android:id="@+id/tv_bankChallName"
                android:layout_marginLeft="10px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="所属银行"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="650px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="@color/colorBlack"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="130px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="账户名"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />
            <TextView
                android:id="@+id/tv_userName"
                android:layout_marginLeft="40px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="账户名"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="650px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="@color/colorBlack"></View>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="银行账户"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_bankNum"
                android:layout_marginLeft="10px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="所属银行"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/bt_edit"
        android:layout_width="300px"
        android:layout_height="70px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:text="编辑"
        android:background="@color/colorYellow"
        android:textColor="@color/white"
        android:textSize="32px" />
</com.zhy.autolayout.AutoLinearLayout>
