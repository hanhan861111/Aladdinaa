<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feed_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context="com.aladdin.hxe.activity.FeedBackActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="36px"
        android:background="@color/colorYellow">

        <ImageButton
            android:id="@+id/imb_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="680px"
        android:layout_height="500px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:orientation="vertical"
        android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="160px"
                android:layout_height="80px"
                android:gravity="center"
                android:text="客服热线"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/dianhua"
                    android:layout_marginLeft="240px"
                    android:layout_gravity="center"
                    android:layout_width="30px"
                    android:layout_height="30px" />

                <TextView
                    android:gravity="center"
                    android:text="0371-56033072"
                    android:textSize="28px"
                    android:textColor="@color/colorGray4"
                    android:layout_width="200px"
                    android:layout_height="80px"
                    android:layout_marginLeft="20px" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:background="@color/colorBlack"
            android:layout_gravity="center"
            android:layout_width="640px"
            android:layout_height="2px"></View>
        <TextView
            android:text="在线反馈"
            android:textSize="32px"
            android:gravity="center"
            android:textColor="@color/colorGray4"
            android:layout_width="160px"
            android:layout_height="60px" />
        <EditText
            android:id="@+id/et_feedBack"
            android:textSize="28px"
            android:inputType="textMultiLine"
            android:windowSoftInputMode="stateHidden"
            android:background="@null"
            android:gravity="top"
            android:maxLines="6"
            android:maxLength="100"
            android:layout_gravity="center"
            android:hint="输入您的意见反馈"
            android:layout_width="650px"
            android:layout_height="260px" />
        <Button
            android:id="@+id/bt_submit"
            android:text="提交"
            android:textColor="@color/white"
            android:background="@color/colorYellow"
            android:layout_gravity="center"
            android:layout_width="160px"
            android:layout_height="70px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
