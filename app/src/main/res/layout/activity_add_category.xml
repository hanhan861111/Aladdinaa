<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_category_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context="com.aladdin.hxe.activity.UpdateCategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="36px"
        android:background="@color/colorYellow">

        <ImageButton
            android:id="@+id/imb_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="品类管理"
            android:textColor="@color/white"
            android:textSize="32px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_width="680px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:background="@color/white">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="100px"
            android:gravity="center"
            android:text="修改品类"
            android:textColor="@color/colorGray4"
            android:textSize="32px" />

        <EditText
            android:id="@+id/et_addCategory"
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="100px"
            android:gravity="center"
            android:hint="请输入品类名称"
            android:background="@null"
            android:textColor="@color/colorGray4"
            android:textSize="32px" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_saveAddCategory"
        android:textSize="32px"
        android:textColor="@color/colorGray4"
        android:text="保存"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_width="680px"
        android:layout_height="80px" />
</LinearLayout>
