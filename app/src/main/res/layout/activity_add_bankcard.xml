<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_bankcard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aladdin.hxe.activity.AddBankcardActivity">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="36px"
        android:background="@color/colorYellow">

        <ImageButton
            android:id="@+id/imb_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加银行卡"
            android:textColor="@color/white"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="680px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="160px"
            android:layout_height="60px"
            android:gravity="center"
            android:text="账户信息"
            android:textColor="@color/colorGray2"
            android:textSize="30px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="账户类型"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

            <Spinner
                android:layout_marginLeft="300px"
                android:id="@+id/spinner5"
                android:layout_width="200px"
                android:layout_height="match_parent"></Spinner>

        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="650px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="@color/colorBlack"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="地区"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="250px"
                android:layout_height="match_parent"
                android:layout_marginLeft="60px"></Spinner>

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="250px"
                android:layout_height="match_parent"></Spinner>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="650px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="@color/colorBlack"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="选择银行"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="500px"
                android:layout_height="match_parent"></Spinner>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="650px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="@color/colorBlack"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="所属支行"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="500px"
                android:layout_height="match_parent"></Spinner>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="650px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="@color/colorBlack"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="银行卡号"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

            <EditText
                android:id="@+id/et_bankCardNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="80px"
                android:background="@null"
                android:hint="请输入银行卡号"
                android:inputType="number"
                android:digits="1234567890"
                android:textSize="28px" />

        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="650px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="@color/colorBlack"></View>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:layout_width="190px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="持卡人姓名"
                android:textColor="@color/colorGray4"
                android:textSize="32px" />

            <EditText
                android:id="@+id/et_bankCardName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50px"
                android:background="@null"
                android:hint="请输入持卡人姓名"
                android:textSize="28px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:text="保存"
        android:id="@+id/bt_submit"
        android:layout_width="300px"
        android:layout_height="70px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:background="@drawable/submit"
        android:textColor="@color/white"
        android:textSize="32px" />
</com.zhy.autolayout.AutoLinearLayout>
