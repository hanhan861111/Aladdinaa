<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_managefood"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical"
    tools:context="com.aladdin.hxe.activity.ManagefoodActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="36px"
        android:background="@color/colorYellow">

        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消息中心"
            android:textColor="@color/white"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="700px"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:background="@mipmap/reminder" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="45px"
            android:text="催单消息"
            android:textColor="@color/blackmid"
            android:textSize="24px" />

        <TextView
            android:gravity="right"
            android:id="@+id/textView2"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="500px"
            android:layout_marginTop="45px"
            android:text="上午11:20"
            android:textSize="24px" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="100px"
            android:text="1001的顾客正在催单，请尽快出餐！"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="700px"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:background="@color/white">

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:background="@mipmap/notice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="45px"
            android:text="系统消息"
            android:textColor="@color/blackmid"
            android:textSize="24px" />

        <TextView
            android:gravity="right"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="500px"
            android:layout_marginTop="45px"
            android:text="昨天"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="100px"
            android:text="欢迎使用黄小二移动点餐平台，点击了解..."
            android:textSize="24px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="700px"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:background="@color/white">

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:background="@mipmap/notice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="45px"
            android:text="活动消息"
            android:textColor="@color/blackmid"
            android:textSize="24px" />

        <TextView
            android:gravity="right"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="500px"
            android:layout_marginTop="45px"
            android:text="昨天"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="100px"
            android:text="黄小二移动点餐平台正式上线啦！"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
