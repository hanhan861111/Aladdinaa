<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_inquire_hide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="680px"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_orderproducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"></ListView>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="80px"
                android:layout_height="40px"
                android:background="#ee7942"
                android:gravity="center"
                android:text="备注:"
                android:textColor="@color/white"
                android:textSize="28px" />


            <TextView
                android:id="@+id/tv_des"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorGray4"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="@color/colorGray3"
                android:textSize="24px" />


            <TextView
                android:id="@+id/tv_orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="41272319861116"
                android:textColor="@color/colorGray5"
                android:textSize="20px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间："
                android:textColor="@color/colorGray3"
                android:textSize="24px" />


            <TextView
                android:id="@+id/tv_createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2017-9-15 12:20"
                android:textColor="@color/colorGray5"
                android:textSize="20px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginLeft="30px"

            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成时间："
                android:textColor="@color/colorGray3"
                android:textSize="24px" />


            <TextView
                android:id="@+id/tv_updateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="-"
                android:textColor="@color/colorGray5"
                android:textSize="20px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
